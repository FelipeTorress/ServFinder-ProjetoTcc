<h1>Listagem de serviços</h1>

<table>
  <thead>
    <tr>
      <th>Serviço</th>
      <th>Descrção</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @service.each do |service| %>
      <tr>
        <td><%= service.title %></td>
        <td><%= service.description %></td>
        <td><%= link_to 'Show', service_path(service) %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Delete', service_path(service), method: :delete, data: { confirm: "Tem certeza?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Criar Novo Serviço', new_service_path %>
</p>