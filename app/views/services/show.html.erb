<div id="page-content">
  <h2 class="text-center mt-4"><%= @service.title %></h2>
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-white rounded border border-secondary">
          <div class="card-header font-italic">
            Criado por <%= link_to @service.user.name, user_path(@service.user) %>
          </div>
          <div class="card-body border-secondary">
            <div class="card-text text-left"><%= simple_format(@service.description) %></div>
            <div class="card-text text-left"><%= @service.limit_date %></div>
            <div class="card-text text-left"><%= ActionController::Base.helpers.number_to_currency(@service.value, :unit => "R$ ", :separator => ",", :delimiter => ".") %></div>
            <% if user_signed_in? && ( @service.user == current_user)%>
              <div class="mt-5 mb-2">
                <%= link_to "Edit", edit_service_path(@service), class: "btn btn-outline-info" %>
                <%= link_to "Delete", service_path(@service), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
              </div>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>Created <%= time_ago_in_words(@service.created_at) %> ago, 
            edited <%= time_ago_in_words(@service.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>