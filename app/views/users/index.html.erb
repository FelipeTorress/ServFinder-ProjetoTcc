<div class="user-div" >
    <% if @users.length > 0 %>
        <div class="container card-service" id="cards-width">
        <% @users.each do |user| %>
            <div class="card text-center shadow rounded rounded-5 border border-primary mt-5" id="cards" style="width:300px;">
                <div class="card-body width-shape">
                    <div class="card-header shadow rounded-5">
                        <img src=<%= asset_path('user_img.jpg') %> class="profile-photo rounded rounded-circle shadow" alt="foto">
                        <h5 class="card-title" ><%= link_to (user.name.split(" ").first+" "+user.name.split(" ").last), user_path(user), class: "text-primary text-decoration-none" %></h5>
                    </div>
                    <p class="card-text" style="margin-top:10px">
                        <%= fa_icon 'envelope' %>
                        <%= user.email %>
                    </p>
                    <p class="card-text">
                        <%= fa_icon 'phone' %>
                        <%=user.phone_number %>
                    </p>
                    <div style="margin-bottom:10px;">
                        <p><%= pluralize(user.services.count, "serviço")%> cadastrados</p>
                        <%= link_to 'Visualizar', user_path(user), class: "btn btn-success" %>
                        <% if user_signed_in? && ( user == current_user ) %>
                            <%= link_to 'Editar Perfil', edit_user_registration_path(user), class: "btn btn-warning" %>
                        <% end %>
                    </div>
                </div>

                <div class="card-footer text-muted" id="card-div">
                    <p class="card-text">nota</p>
                </div>
            </div>
        <% end %>
        </div>
    <% else %>
        <h4>Ops... Ocorreu um erro com essa pagina, tenha paciencia que iremos arrumar para você!</h4>
    <% end %>
</div>
<div class="flickr_pagination d-flex justify-content-center my-4">
  <div class="text-center">
    <%= will_paginate @users, :container => false, class: "shadow" %>
  </div>
</div>