<h2>Cadastrar-se</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Digite seu Email" %>
  </div>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :name, autocomplete: "Digite Seu nome" %>
  </div>

  <div class="field">
    <%= f.label :telefone %><br />
    <%= f.telephone_field :phone_number, autocomplete: "Digite telefone" %>
  </div>

  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(minimo de <%= @minimum_password_length %> caracteres)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Digite sua senha" %>
  </div>

  <div class="field">
    <%= f.label :confirmar_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Repita a senha" %>
  </div>

  <h3>Para continuar você deve ler e aceitar:</h3>

  <div>
    <%= f.check_box :accepted_terms_of_use %>
    <%= link_to 'Termos de Uso', terms_index_path, target: "_blank" %>
  </div>
  
  <div>
    <%= f.check_box :accepted_privacy_policy %>
    <%= link_to 'Política de Privacidade', policy_index_path, target: "_blank" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar Conta" %>
  </div>

<% end %>
<%= render "devise/shared/links" %>